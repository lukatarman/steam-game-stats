{
  "name": "steam-game-stats",
  "version": "0.0.1",
  "description": "Application for steam games statistics",
  "scripts": {
    "build:backend": "docker build -t steam-game-stats-backend:latest  -f backend/Dockerfile .",
    "start:backend:local-db": "docker compose --env-file ./config/local-db.env up -d",
    "start:backend:cloud-db": "docker compose --env-file ./config/cloud-db.env up -d",
    "stop": "docker compose --env-file ./config/local-db.env down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukatarman/steam-game-stats.git"
  },
  "author": "Luka Tarman, Stanislav Jakuschevskij",
  "license": "ISC",
  "homepage": "https://github.com/lukatarman/steam-game-stats#readme",
  "workspaces": [
    "backend",
    "frontend"
  ]
}
